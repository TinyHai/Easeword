<resources>

    <!-- Base application theme. -->
    <style name="AppThemeNoToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppThemeNoToolBar.SplashActivityTheme" parent="AppThemeNoToolBar" >
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PaintSizeSmallRadioStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/paint_size_small_bg</item>
    </style>
    <style name="PaintSizeMediumRadioStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/paint_size_medium_bg</item>
    </style>
    <style name="PaintSizeLargeRadioStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/paint_size_large_bg</item>
    </style>
</resources>
