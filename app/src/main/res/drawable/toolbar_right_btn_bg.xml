<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1a5a4000" />
            <size android:width="64dp" />
            <corners android:topLeftRadius="24dp" android:topRightRadius="0dp" android:bottomLeftRadius="24dp" android:bottomRightRadius="0dp" />
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:topLeftRadius="24dp" android:topRightRadius="0dp" android:bottomLeftRadius="24dp" android:bottomRightRadius="0dp" />
        </shape>
    </item>
    <item android:bottom="1dp">
        <ripple
            android:color="#33000000"
            android:radius="18dp">
            <item android:drawable="@drawable/circle_r18dp" android:gravity="center" />
        </ripple>
    </item>
</layer-list>